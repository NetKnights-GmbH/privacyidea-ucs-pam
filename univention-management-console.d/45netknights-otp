@!@
hostname = baseConfig.get('hostname')
domainname = baseConfig.get('domainname')
url = baseConfig.get('privacyidea/umc/url', 'https://%s.%s/privacyidea' % (hostname, domainname))
realm = baseConfig.get('privacyidea/umc/realm', '')

pam_config = '''
auth     sufficient     pam_python.so /usr/share/privacyidea/privacyidea_pam.py url=%s realm=%s
''' % (url, realm)

if baseConfig.get('privacyidea/umc/enable'):
        print pam_config

