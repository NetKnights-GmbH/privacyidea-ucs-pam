@!@
hostname = baseConfig.get('hostname')
domainname = baseConfig.get('domainname')
url = baseConfig.get('privacyidea/pam/url', 'https://%s.%s' % (hostname, domainname))
prompt = baseConfig.get('privacyidea/pam/prompt', 'OTP: ')
realm = baseConfig.get('privacyidea/pam/realm', '')

pam_config = '''
auth     sufficient     pam_python.so /usr/share/privacyidea/privacyidea_pam.py url=%s prompt=%s realm=%s
''' % (url, prompt, realm)

if baseConfig.get('privacyidea/pam/enable'):
	print pam_config

@!@
